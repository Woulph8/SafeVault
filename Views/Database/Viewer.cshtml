@model List<SafeVault.Models.UserDto>
@{
    ViewData["Title"] = "Database Viewer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-database me-2"></i>SafeVault Database Viewer</h2>
                <div>
                    <a href="@Url.Action("PasswordHashInfo")" class="btn btn-warning">
                        <i class="fas fa-shield-alt me-2"></i>Password Security Analysis
                    </a>
                    <a href="@Url.Action("ExportData")" class="btn btn-success">
                        <i class="fas fa-download me-2"></i>Export CSV
                    </a>
                    <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                    </a>
                </div>
            </div>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Database Statistics -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="mb-0">@ViewBag.TotalUsers</h4>
                                    <p class="mb-0">Total Users</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-users fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="mb-0">@ViewBag.ActiveUsers</h4>
                                    <p class="mb-0">Active Users</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-user-check fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-danger text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="mb-0">@ViewBag.AdminUsers</h4>
                                    <p class="mb-0">Administrators</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-user-shield fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="mb-0">@ViewBag.UsersWithLogin</h4>
                                    <p class="mb-0">Have Logged In</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-sign-in-alt fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Database Connection Info -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Database Connection Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Server:</strong> <code>(localdb)\mssqllocaldb</code></p>
                            <p><strong>Database:</strong> <code>SafeVaultDb</code></p>
                            <p><strong>Provider:</strong> SQL Server LocalDB</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Authentication:</strong> Windows Integrated</p>
                            <p><strong>Connection Type:</strong> Local Development</p>
                            <p><strong>Last Updated:</strong> @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Users Table -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-table me-2"></i>Users Table (@Model.Count records)</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Status</th>
                                    <th>Created Date</th>
                                    <th>Last Modified</th>
                                    <th>Last Login</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td><strong>@user.Id</strong></td>
                                        <td>
                                            <i class="fas fa-user me-2 text-muted"></i>@user.Username
                                        </td>
                                        <td>
                                            <i class="fas fa-envelope me-2 text-muted"></i>@user.Email
                                        </td>
                                        <td>
                                            @if (user.Role == SafeVault.Models.UserRole.Admin)
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-shield-alt me-1"></i>Admin
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-primary">
                                                    <i class="fas fa-user me-1"></i>User
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            @if (user.IsActive)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check-circle me-1"></i>Active
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-times-circle me-1"></i>Inactive
                                                </span>
                                            }
                                        </td>
                                        <td class="text-muted small">
                                            <i class="fas fa-calendar-plus me-1"></i>
                                            @user.CreatedDate.ToString("MMM dd, yyyy")
                                            <br>
                                            @user.CreatedDate.ToString("HH:mm:ss")
                                        </td>
                                        <td class="text-muted small">
                                            <i class="fas fa-edit me-1"></i>
                                            @user.LastModifiedDate.ToString("MMM dd, yyyy")
                                            <br>
                                            @user.LastModifiedDate.ToString("HH:mm:ss")
                                        </td>
                                        <td class="text-muted small">
                                            @if (user.LastLoginDate.HasValue)
                                            {
                                                <i class="fas fa-sign-in-alt me-1 text-success"></i>
                                                @user.LastLoginDate.Value.ToString("MMM dd, yyyy")
                                                <br>
                                                @user.LastLoginDate.Value.ToString("HH:mm:ss")
                                            }
                                            else
                                            {
                                                <i class="fas fa-times me-1 text-warning"></i>
                                                <em>Never logged in</em>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-database fa-3x text-muted mb-3"></i>
                    <h4>No Data Found</h4>
                    <p class="text-muted">The database appears to be empty.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table th {
        border-top: none;
        font-weight: 600;
        font-size: 0.9em;
    }
    
    .table td {
        vertical-align: middle;
        font-size: 0.9em;
    }
    
    .badge {
        font-size: 0.75em;
    }
    
    .card {
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        border: 1px solid rgba(0, 0, 0, 0.125);
    }
</style>