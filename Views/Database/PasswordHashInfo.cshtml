@{
    ViewData["Title"] = "Password Security Analysis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-shield-alt me-2 text-warning"></i>Password Security Analysis</h2>
                <div>
                    <a href="@Url.Action("Viewer", "Database")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Database Viewer
                    </a>
                </div>
            </div>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Security Warning -->
            <div class="alert alert-warning" role="alert">
                <div class="d-flex">
                    <div class="flex-shrink-0">
                        <i class="fas fa-exclamation-triangle fa-2x"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h4 class="alert-heading">Security Information</h4>
                        <p class="mb-2">This page shows password security information for administrative verification. Only partial hash prefixes are displayed for security purposes.</p>
                        <p class="mb-0"><strong>Never share full password hashes or display them in production!</strong></p>
                    </div>
                </div>
            </div>

            <!-- Security Analysis Summary -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="mb-0">@ViewBag.SecurityAnalysis.TotalUsers</h4>
                                    <p class="mb-0">Total Users</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-users fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="mb-0">@ViewBag.SecurityAnalysis.UsersWithValidHashes</h4>
                                    <p class="mb-0">Valid Hashes</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-check-circle fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="mb-0">@((int)ViewBag.SecurityAnalysis.AverageHashLength)</h4>
                                    <p class="mb-0">Avg Hash Length</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-hashtag fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-dark">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4 class="mb-0">@((int)ViewBag.SecurityAnalysis.AverageSaltLength)</h4>
                                    <p class="mb-0">Avg Salt Length</p>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-key fa-2x"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Hash Analysis Results -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-analytics me-2"></i>Hash Security Analysis</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-success">âœ… Security Checks Passed:</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check text-success me-2"></i>All passwords are hashed (not stored in plain text)</li>
                                <li><i class="fas fa-check text-success me-2"></i>Using SHA-256 with salt for password hashing</li>
                                <li><i class="fas fa-check text-success me-2"></i>Each user has unique salt values</li>
                                <li><i class="fas fa-check text-success me-2"></i>Hash lengths indicate proper encoding</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-info">ðŸ”§ Technical Details:</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-info text-info me-2"></i>Hash Algorithm: SHA-256</li>
                                <li><i class="fas fa-info text-info me-2"></i>Salt Length: @((int)ViewBag.SecurityAnalysis.AverageSaltLength) characters avg</li>
                                <li><i class="fas fa-info text-info me-2"></i>Hash Length: @((int)ViewBag.SecurityAnalysis.AverageHashLength) characters avg</li>
                                <li><i class="fas fa-info text-info me-2"></i>Storage: Hex-encoded strings</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- User Hash Information Table -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-table me-2"></i>Password Hash Information (Secure View)</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Username</th>
                                    <th>Role</th>
                                    <th>Hash Status</th>
                                    <th>Hash Length</th>
                                    <th>Hash Preview</th>
                                    <th>Salt Length</th>
                                    <th>Salt Preview</th>
                                    <th>Created Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td><strong>@user.Id</strong></td>
                                        <td>
                                            <i class="fas fa-user me-2 text-muted"></i>@user.Username
                                        </td>
                                        <td>
                                            @if (user.Role == SafeVault.Models.UserRole.Admin)
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-shield-alt me-1"></i>Admin
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-primary">
                                                    <i class="fas fa-user me-1"></i>User
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            @if (user.HasValidHash && user.HasValidSalt)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-shield-check me-1"></i>Secure
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-exclamation-triangle me-1"></i>Check
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@user.PasswordHashLength chars</span>
                                        </td>
                                        <td>
                                            <code class="small">@user.PasswordHashPrefix...</code>
                                            <small class="text-muted d-block">ðŸ”’ Only prefix shown for security</small>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@user.SaltLength chars</span>
                                        </td>
                                        <td>
                                            <code class="small">@user.SaltPrefix...</code>
                                            <small class="text-muted d-block">ðŸ§‚ Unique per user</small>
                                        </td>
                                        <td class="text-muted small">
                                            @user.CreatedDate.ToString("MMM dd, yyyy HH:mm")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Security Recommendations -->
            <div class="card mt-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-lightbulb me-2"></i>Security Recommendations</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>âœ… Current Good Practices:</h6>
                            <ul>
                                <li>Passwords are never stored in plain text</li>
                                <li>SHA-256 hashing with unique salts</li>
                                <li>Salt values are randomly generated</li>
                                <li>Hash prefixes only shown for verification</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>ðŸš€ Future Enhancements:</h6>
                            <ul>
                                <li>Consider bcrypt or Argon2 for newer implementations</li>
                                <li>Implement password complexity requirements</li>
                                <li>Add password expiration policies</li>
                                <li>Log password change attempts</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .table th {
        border-top: none;
        font-weight: 600;
        font-size: 0.9em;
    }
    
    .table td {
        vertical-align: middle;
        font-size: 0.9em;
    }
    
    .badge {
        font-size: 0.75em;
    }
    
    code {
        font-size: 0.8em;
        background-color: #f8f9fa;
        padding: 2px 4px;
        border-radius: 3px;
    }
    
    .alert {
        border-left: 4px solid currentColor;
    }
</style>